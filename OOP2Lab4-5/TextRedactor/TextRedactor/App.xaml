<Application x:Class="TextRedactor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TextRedactor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Languages/lang.xaml"/>
                <ResourceDictionary Source="Resources/Languages/lang.ru-RU.xaml"/>
                <ResourceDictionary Source="Resources/Languages/lang.en-US.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
